@inject DevelopersSite.Services.DocumentService service
@{
    var currentProduct = ViewBag.CurrentProduct;
}

<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-7" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/">
                <img use-cdn src="/images/slamby.developers-logo.png" class="navbar-brand" />
            </a>
        </div>
        <div class="collapse navbar-collapse navbar-right" id="bs-example-navbar-collapse-7">
            <ul class="nav navbar-nav">
                @foreach (var document in service.Documents)
                {
                    var routeParams = service.GetRouteParams(document.Product);
                    <li class="@(currentProduct == document.Product ? "active" : "" )">
                        <a asp-controller="docs" asp-action="Index" asp-route-product="@routeParams.Product" asp-route-version="@routeParams.Version" asp-route-file="@routeParams.File">
                            @(document.Product)
                        </a>
                    </li>
                }
                <li>&nbsp;</li>
                <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Tutorial" ? "active" : "")">
                    <a href="/tutorial/" target="_self">Tutorials</a>
                </li>
                <li>
                    <a href="http://www.slamby.com/support" target="_blank">Support</a>
                </li>
                <li>
                    <a href="http://blog.slamby.com" target="_blank">Blog</a>
                </li>
            </ul>
        </div>
    </div>
</nav>