<div class="container text-center">
    <div class="row">
        <div class="col-md-12 page-header">
            <h1>Developer News</h1>
        </div>
    </div>
    @foreach (var item in ViewBag.news)
    {
        <div class="row">
            <div class="col-xs-6 col-xs-offset-2 text-left">
                <h3>@Html.Raw(item.title.rendered)</h3>
            </div>
            <div class="col-xs-8 col-xs-offset-2 text-left">
                <i><span>@Html.Raw(item.date)</span></i>
                <p>@Html.Raw(item.content.rendered)</p>
                <hr />
            </div>
        </div>
    }
</div>