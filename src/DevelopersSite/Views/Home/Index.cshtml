<div class="container text-center">
    <div class="wrapper">
        <div class="col-xs-4">
            <i class="fa fa-newspaper-o fa-3x"></i>
            <h4>Newsletter</h4>
            <p>Subscribe to receive our latest developments via e-mail.</p>
            <button class="btn btn-info" data-toggle="modal" data-target="#SubscribtionForm">Subscribe</button>
            <!-- Modal -->
            <div class="modal fade" id="SubscribtionForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Community Newsletter</h4>
                            <p>Sign up and get the<br />latest updates by emial.</p>
                        </div>
                        <div class="modal-body">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                                    <div class="col-sm-10">
                                        <input type="email" class="form-control" id="inputEmail3" placeholder="Email" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="name" class="col-sm-2 control-label">Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="name" placeholder="Name" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="company" class="col-sm-2 control-label">Company</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="company" placeholder="Company Name" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-10 col-sm-offset-2 text-left">
                                        <span>For more information visit our <a href="https://www.slamby.com/community" target="_blank">website</a>.</span>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-info" id="SubscribeBtn">Sign Up</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-4">
            <i class="fa fa-linkedin fa-3x"></i>
            <h4>LinkedIn Group</h4>
            <p>Join our group to be aware of our latest developments.</p>
            <a href="https://www.linkedin.com/groups/8485577" class="btn btn-info" role="button" target="_blank">Join Community</a>
        </div>
        <div class="col-xs-4">
            <i class="fa fa-rss fa-3x"></i>
            <h4>Developer News</h4>
            <p>Check the latest developer<br />& product updates.</p>
            <a href="/News" class="btn btn-info" role="button" target="_self">Read News</a>
        </div>
    </div>
    <hr />
</div>

<div class="container">
    <div class="wrapper">
        <div class="col-md-12">
            <h3>Recent Updates</h3>
        </div>
        <div class="col-md-12">
            @if (ViewBag.news.Count == 0)
            {
                <p>Currently there is no news available.</p>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var item in ViewBag.news)
                {
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-xs-8">
                                    <a href="/news" target="_self">@Html.Raw(item.title.rendered)</a>
                                </div>
                                <div class="col-xs-4">
                                    <span class="pull-right text-muted">@item.date.ToString("dd. MMMM, hh:mm")</span>
                                </div>
                            </div>
                        </li>
                    }
                </ul>

            }
        </div>
    </div>
</div>